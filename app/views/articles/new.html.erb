<h1>New article</h1>

<% form_for(@article) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :subject %><br />
    <%= f.text_field :subject %>
  </p>
  <p>
    <label for="article_name">Name (記事のURLの一部として使われます。正規表現を含めることができます。)</label><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.label :content_type_id %><br />
    <%= f.select :content_type_id, @content_types.collect{|c| [c.name, c.id]} %>
  </p>
  <p>
    <%= f.label :layout_id %><br />
    <%= f.text_field :layout_id %>
  </p>
  <p>
    <%= f.label :path_id %><br />
    <%= f.select :path_id, @paths.collect{|p| [p.name, p.id]} %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', articles_path %>