<h1>Editing article</h1>

<% form_for(@article) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :path_id %><br />
    <%= f.text_field :path_id %>
  </p>
  <p>
    <%= f.label :subject %><br />
    <%= f.text_field :subject %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.label :content_type_id %><br />
    <%= f.text_field :content_type_id %>
  </p>
  <p>
    <%= f.label :user_id %><br />
    <%= f.text_field :user_id %>
  </p>
  <p>
    <%= f.label :layout_id %><br />
    <%= f.text_field :layout_id %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

