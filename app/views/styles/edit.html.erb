<h1>Editing style</h1>

<% form_for(@style) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :data %><br />
    <%= f.text_area :data %>
  </p>
  <p>
    <%= f.label :style_type %><br />
    <%= f.select :style_type_id, @style_types.collect{|p| [p.name, p.id]} %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @style %> |
<%= link_to 'Back', styles_path %>